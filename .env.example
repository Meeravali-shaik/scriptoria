# Copy to .env for local runs (do not commit .env)

# Flask
FLASK_DEBUG=1
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_SECRET_KEY=change_me
FLASK_COOKIE_SECURE=false

# Gemini
# Use comma-separated keys for round-robin
GEMINI_API_KEYS=replace_me_1,replace_me_2
# Single-key fallback (optional)
GEMINI_API_KEY=replace_me
# Optional (default: gemini-2.5-flash)
GEMINI_MODEL=gemini-2.5-flash

# Optional tuning
MIN_STORY_CHARS=120
AI_SINGLE_CALL=1

# Only set if you host frontend on a different origin
# Example: CORS_ORIGINS=http://127.0.0.1:5500,http://localhost:5500
CORS_ORIGINS=
